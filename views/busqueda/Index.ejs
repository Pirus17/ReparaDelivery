<%-include ('../layouts/header') %>
    <H1 class="text-center textOfertas">PRODUCTOS</H1>
    <BR>
    <div class="row d-flex justify-content-center">
        <div class="col-md-2">
        </div>
        <!--mostrar productos-->
        <div class="col-md-8">
            <% for (let i=0; i<9 && i < productos.length; i++) { %>
                <% if (i % 3===0) { %>
                    <div class="row d-flex">
                        <% } %>
                            <div class="col-md-4 mb-2">
                                <form action="/compras" method="post">
                                    <input type="hidden" name="IdProducto" value="<%= productos[i].IdProducto%>">
                                    <button type="submit" class="btn btn-outline-light text-dark bg-white">
                                        <img src="/images/diseÃ±os1.jpg" class="img-fluid" alt="">
                                        <h5>
                                            <%= productos[i].Marca %>
                                                <%= productos[i].Modelo %>
                                        </h5>
                                        <br>
                                        <h4>$<%= productos[i].Precio %>
                                        </h4>
                                    </button>
                                </form>

                            </div>


                            <% if ((i + 1) % 3===0 || i===10) { %>
                    </div>
                    <% } %>
                        <% } %>
        </div>


    </div>






    <%- include ('../layouts/footer.ejs') %>