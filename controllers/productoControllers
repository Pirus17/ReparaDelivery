var conexion = require('../config/conexion');
var producto = require('../model/productoModel');

module.exports = {

    index: function (req, res) {
        producto.obtener(conexion, function (err, datos) {
            res.render('productos/index', { title: 'Productos', productos: datos });
        })
    },

    filtrar: function (req, res) {
            producto.porMarca(conexion, req.body, function (err, datos) {
               
            res.render('productos/index', { title: 'Productos',productos: datos});
        })

    }
}




